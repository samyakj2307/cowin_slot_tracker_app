<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/opacityFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:alpha="0.3"
        android:background="@android:color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="12dp"
        android:background="@drawable/pop_up_drawable">

        <ImageButton
            android:id="@+id/closeRemovePopUpPopupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@color/white"
            android:contentDescription="@string/close_popup"
            android:src="@drawable/close_popup"
            android:visibility="visible" />

        <TextView
            android:id="@+id/stop_tracking_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/closeRemovePopUpPopupButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="@string/stop_tracking_pincode"
            android:textColor="@color/slot_unavailable_color"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/stop_pincode_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stop_tracking_heading"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="465441"
            android:textColor="@color/black"
            android:textSize="30sp" />


        <Button
            android:id="@+id/remove_pincode_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stop_pincode_number"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/add_pincode_button_drawable"
            android:text="@string/remove_pincode"
            android:textColor="@color/white" />


    </RelativeLayout>

</RelativeLayout>